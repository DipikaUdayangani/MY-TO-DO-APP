<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAC7F4"
    tools:context=".reset">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">


        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="39dp"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="back"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="90sp"
            android:layout_marginTop="20sp"
            android:contentDescription="@string/todo2"
            app:srcCompat="@drawable/success" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAC7F4"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/emblema_one"
            android:gravity="center"
            android:text="Woo hooo!"
            android:textColor="#0A0B0A"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:ignore="DuplicateIds" />


    </LinearLayout>

    <Button
        android:id="@+id/btnSave8"
        android:layout_width="251dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#F5F5F5"
        android:text="Login"
        android:textColor="#333F3E"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="505dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Your password has been reset successfully!  Now login with your new password"
        android:textColor="#0A0B0A"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="DuplicateIds,MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="307dp" />


</androidx.constraintlayout.widget.ConstraintLayout>