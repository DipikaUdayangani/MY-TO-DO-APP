<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAC7F4"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageButton
                android:id="@+id/backBtn5"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="back"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="50dp"
                android:text="@string/user_profile"
                android:textColor="#333F3E"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="49dp"
                android:layout_height="63dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="50dp"
                android:contentDescription="@string/to_do"
                app:srcCompat="@drawable/logo"
                tools:srcCompat="@drawable/logo" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/user"
            tools:srcCompat="@drawable/user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/txt_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:text="User name: Dipika Udayangani"
                android:textColor="#333F3E"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Email: dipika@gmail.com "
                android:textColor="#333F3E"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnEdit_info"
                android:layout_width="242dp"
                android:layout_height="45dp"
                android:layout_marginTop="45dp"
                android:backgroundTint="#EAC7F4"
                android:text="@string/edit_info"
                android:textColor="#090808" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>