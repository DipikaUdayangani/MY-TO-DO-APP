<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".main_items">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="417dp"
        android:layout_height="665dp"
        android:background="#EAC7F4"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <include
                layout="@layout/manu_toolbar"
                 />


        </LinearLayout>

        <LinearLayout
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="10dp">

            <ListView
                android:id="@+id/todoitemlistview"
                android:layout_width="345dp"
                android:layout_height="412dp"
                android:cacheColorHint="@color/black"
                android:dividerHeight="10dp"
                tools:listitem="@layout/list_item">

            </ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="123dp"
            android:gravity="bottom|end"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/img_Add"
                android:layout_width="78dp"
                android:layout_height="65dp"
                android:contentDescription="@string/todo_3"
                app:srcCompat="@drawable/add_mark"
                tools:srcCompat="@drawable/add_mark" />


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="417dp"
        android:layout_height="665dp"
        android:layout_gravity ="start">

        <include layout="@layout/activity_naw_drawer"></include>

    </RelativeLayout>









</androidx.drawerlayout.widget.DrawerLayout>

